<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="TextBoxTopHeaderMargin">0,12,0,2</Thickness>
    <Thickness x:Key="ComboBoxTopHeaderMargin">0,12,0,2</Thickness>
    <Thickness x:Key="PasswordBoxTopHeaderMargin">0,12,0,2</Thickness>

    <Style x:Key="InlineHeader" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="DialogButton" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

</ResourceDictionary>
